<style>
	* {
		margin: 0 !important;
		padding: 0 !important;
		box-sizing: border-box;
	}

	body {
		overflow: hidden;
	}

	
	.carousel {
		height: 100vh;
		width: 100vw;
		overflow: hidden; 
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center; 
	}

		.carousel .list .item {
			width: 100%;
			height: 100%;
			position: absolute;
			top: 0;
			left: 0;
			opacity: 0;
			transition: all 0.8s ease;
			display: flex;
			justify-content: center;
			align-items: center; 
		}

			.carousel .list .item img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				object-position: center;
			}

			.carousel .list .item .content {
				position: absolute;
				top: 20%;
				width: 1140px;
				max-width: 100%;
				left: 50%;
				transform: translate(-50%, 50px);
				box-sizing: border-box;
				color: #fff;
				text-shadow: 0 5px 10px #0004;
				opacity: 0;
				transform: translateY(10px);
				transition: opacity 1s ease, transform 1s ease;
			}

			.carousel .list .item .des {
				font-size: 28px;
			}

			.carousel .list .item.active {
				opacity: 1;
				transform: translateY(0);
			}

				.carousel .list .item.active .content {
					opacity: 1;
					transform: translate(-50%, 0);
				}

			.carousel .list .item .author,
			.carousel .list .item .title,
			.carousel .list .item .topic,
			.carousel .list .item .des,
			.carousel .list .item .buttons {
				opacity: 0;
				transform: translateY(50px);
				transition: opacity 0.8s ease, transform 0.8s ease;
			}

			.carousel .list .item.active .author {
				opacity: 1;
				transform: translateY(0);
				transition-delay: 0.5s;
			}

			.carousel .list .item.active .title {
				opacity: 1;
				transform: translateY(0);
				transition-delay: 0.7s;
			}

			.carousel .list .item.active .topic {
				opacity: 1;
				transform: translateY(0);
				transition-delay: 0.9s;
			}


			.carousel .list .item.active .des {
				opacity: 1;
				transform: translateY(0);
				transition-delay: 1.1s;
			}

			.carousel .list .item.active .buttons {
				opacity: 1;
				transform: translateY(0);
				transition-delay: 1.3s;
			}

			.carousel .list .item .author {
				font-weight: bold;
				letter-spacing: 10px;
			}

			.carousel .list .item .title,
			.carousel .list .item .topic {
				font-size: 5em;
				font-weight: bold;
				line-height: 1.3em;
			}

			.carousel .list .item .topic {
				color: #f1683a;
			}

			.carousel .list .item .buttons {
				display: grid;
				grid-template-columns: repeat(2, 130px);
				grid-template-rows: 40px;
				gap: 5px;
				margin-top: 20px;
			}

				.carousel .list .item .buttons button {
					border: none;
					background-color: #eee;
					letter-spacing: 3px;
					font-family: Poppins;
					font-weight: 500;
				}

					.carousel .list .item .buttons button:hover {
						transform: scale(1.05);
						z-index: 101;
						box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
						cursor: pointer;
						transition: transform 0.3s ease;
					}

					.carousel .list .item .buttons button:nth-child(2) {
						background-color: rgba(0, 0, 0, 0.5);
						border: 1px solid #fff;
						color: #eee;
					}

	.thumbnail {
		position: absolute;
		bottom: 30px;
		left: 50%;
		transform: translateX(-50%);
		display: flex;
		gap: 15px;
		z-index: 100;
		justify-content: flex-end;
		width: 100%; 
		max-width: 1100px;
		padding-right: 20px; 
	}


		.thumbnail .item {
			width: 120px;
			height: 190px;
			border-radius: 80px;
			flex-shrink: 0;
			position: relative;
			transition: transform 0.3s ease;
		}

			.thumbnail .item:hover {
				transform: scale(1.05);
				z-index: 101;
				box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
				cursor: pointer;
			}

			.thumbnail .item.selected {
				transform: scale(1.2); 
				z-index: 101;
				box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
				cursor: pointer;
			}

			.thumbnail .item img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				border-radius: 20px;
			}

			.thumbnail .item .content {
				color: #fff;
				position: absolute;
				bottom: 10px;
				left: 10px;
				right: 10px;
			}

				.thumbnail .item .content .title {
					font-weight: 500;
				}

				.thumbnail .item .content .description {
					font-weight: 300;
				}



	.carousel .time {
		position: absolute;
		z-index: 1000;
		width: 0%;
		height: 3px;
		left: 0;
		top: 0;
		
	}



	@@media (max-width: 768px) {
		.carousel .list .item .content

	{
		width: 90%;
		top: 15%;
		bottom:25%;
		transform: translate(-50%, 0);
		text-align: center;
	}

	.carousel .list .item .title,
	.carousel .list .item .topic {
		font-size: 2em;
	}

	.carousel .list .item .des {
		font-size: 1em;
		padding: 0 10px;
	}

	.carousel .list .item .buttons {
		grid-template-columns: 1fr;
		grid-template-rows: 40px 40px;
		width: 100%;
		justify-items: center;
	}

		.carousel .list .item .buttons button {
			width: 80%;
			font-size: 1em;
		}

		.thumbnail {
			position: static; 
			gap: 10px;
			flex-wrap: wrap;
			justify-content: center;
			width: 100%;
			transform: none;
			margin-top:50px !important;
		}

			.thumbnail .item {
				width: 80px;
				height: 110px;
				border-radius: 12px;
			}

				.thumbnail .item img {

					width: 100%;
					height: 100%;
					object-fit: cover;
					border-radius: 20px;
				}

				.thumbnail .item .content .title {
					font-size: 0.9em;
				}

				.thumbnail .item .content .description {
					font-size: 0.8em;
				}
	}
</style>




<script>
	const carousel = document.querySelector('.carousel');
	const list = carousel.querySelector('.list');
	const thumbnail = carousel.querySelector('.thumbnail');
	const timeBar = carousel.querySelector('.time');

	let currentIndex = 0;

	// Atualiza o slide
	function updateSlide() {
	  const items = list.children;
	  for (let i = 0; i < items.length; i++) {
		items[i].style.zIndex = i === currentIndex ? 1 : 0;
		if (i === currentIndex) {
		  items[i].classList.add('active');
		} else {
		  items[i].classList.remove('active');
		}
	  }
	  updateThumbnails();
	}

	// Muda o slide com direção (1 para frente, -1 para trás)
	function changeSlide(direction) {
	  const items = list.children;

	  if (direction === 1 && currentIndex < items.length - 1) {
		currentIndex++;
	  } else if (direction === -1 && currentIndex > 0) {
		currentIndex--;
	  }

	  updateSlide();
	}

	// Atualiza as miniaturas (thumbnails) com base no slide atual
	function updateThumbnails() {
	  const items = thumbnail.children;
	  for (let i = 0; i < items.length; i++) {
		if (i === currentIndex) {
		  items[i].classList.add('selected');
		} else {
		  items[i].classList.remove('selected'); 
		}
	  }
	}


	for (let i = 0; i < thumbnail.children.length; i++) {
	  thumbnail.children[i].addEventListener('click', () => {
		currentIndex = i;
		updateSlide();
	  });
	}

	setInterval(() => {
	  currentIndex++;
	  if (currentIndex >= list.children.length) {
		currentIndex = 0;
	  }
	  updateSlide();
	}, 15000);


	updateSlide();

</script>
